<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="QTheme" parent="android:Theme.Light" >
        <item name="android:windowNoTitle">true</item><!-- Variant of the light theme with no title bar -->
    </style>
    
    <style name="Header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:background">@drawable/shape_g_black</item>
    </style>
    
    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="HeaderBtn">
        <item name="android:layout_width">58dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/base_btn_bg</item>
    </style>
    
    <style name="LineGray">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/base_gray_light</item>
    </style>
    
    <style name="QEditText">
        <item name="android:background">@drawable/base_edittext</item>
    </style>

    <style name="CaptureMenuItem">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">5dip</item>
    </style>
    
    <style name="QListView">
        <item name="android:divider">@color/base_gray_light</item>
        <item name="android:dividerHeight">0.5dip</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:fadeEnabled">false</item>
    </style> 
    
    <style name="QTabBtn">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">1dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/base_tab_btn_bg</item>
        <item name="android:textSize">11.0dip</item>
        <item name="android:textColor">@color/base_tabhost_btn_text</item>
    </style>
        
</resources>