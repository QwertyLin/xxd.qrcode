<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:qview="http://schemas.android.com/apk/res/cn.xxd.qr"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout 
       android:layout_width="@dimen/base_footer_height"
       android:layout_height="wrap_content"
       android:layout_gravity="right"
       android:gravity="center_horizontal"
       android:orientation="vertical"
       >
       <q.view.RotateImageButton 
           android:id="@+id/home_setting"
           android:layout_width="@dimen/base_footer_height"
           android:layout_height="@dimen/base_footer_height"
           android:background="@drawable/base_btn_bg"
           android:src="@drawable/a_action_settings"
           qview:arg_float="-90"
           />
       <View 
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           />
       <q.view.RotateImageButton 
           android:id="@+id/home_flash"
           android:layout_width="@dimen/base_footer_height"
           android:layout_height="@dimen/base_footer_height"
           android:background="@drawable/base_btn_bg"
           android:src="@drawable/a_device_access_flash_off"
           qview:arg_float="-90"
           />
       <View 
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           />
       <q.view.RotateImageButton 
           android:id="@+id/home_favorite"
           android:layout_width="@dimen/base_footer_height"
           android:layout_height="@dimen/base_footer_height"
           android:background="@drawable/base_btn_bg"
           android:src="@drawable/a_collections_view_as_list"
           qview:arg_float="-90"
           />
   </LinearLayout>
</FrameLayout>
