<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qview="http://schemas.android.com/apk/res/cn.xxd.qr"
    android:id="@+id/home_qrcode_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    >
    
    <FrameLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@color/base_white"
    	android:layout_gravity="center"
        >
        
        <ImageView 
	        android:id="@+id/home_qrcode_img"
	        android:layout_width="200dip"
	        android:layout_height="200dip"
	        android:layout_gravity="center_vertical"
	        />
	    
	    <q.view.RotateTextView 
	        android:id="@+id/home_qrcode_text"
	        android:layout_width="200dip"
	        android:layout_height="200dip"
	        android:layout_gravity="center_vertical"
	        qview:arg_float="-90"
	        android:text="http://www.baidu.com/http://www.baidu.com/http://www.baidu.com/http://www.baidu.com/http://www.baidu.com/http://www.baidu.com/http://www.baidu.com/"
	        />
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        ></LinearLayout>
	    
	    <q.view.RotateTextView 
	        android:id="@+id/home_qrcode_text"
	        android:layout_width="200dip"
	        android:layout_height="200dip"
	        android:layout_gravity="center_vertical"
	        qview:arg_float="-90"
	        android:text="复制到剪切板"
	        />
        
    </FrameLayout>
    
</FrameLayout>